    $Email=$_POST['Email'];

        $query=mysqli_query($con,"select ID from employeedetail where  EmpEmail='$Email' and EmpCode='$empid' ");
    $ret=mysqli_fetch_array($query);
    if($ret>0){
      $_SESSION['empid']=$empid;
      $_SESSION['email']=$Email;
     header('location:resetpassword.php');
    }
